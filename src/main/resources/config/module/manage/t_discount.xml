        <select id="manage.discount.selectPageList" parameterType="net.jeeshop.services.manage.discount.bean.Discount" resultType="net.jeeshop.services.manage.discount.bean.Discount">
         SELECT
            d.id,
            d.name,
            d.begintime,
            d.endtime,
            d.cuttype,
            d.cutnum,
            d.convertType,
            d.convertNum,
            d.facevale,
             d.allCount,
            d.levCount,
            d.status,
            "all" AS pname
        FROM
            t_discount d
        WHERE
            1 = 1
        AND d.protype = 0
        AND d.proid = 0
        UNION
            SELECT
                d.id,
                d.name,
                d.begintime,
                d.endtime,
                d.cuttype,
                d.cutnum,
                d.convertType,
                d.convertNum,
                d.facevale,
        d.allCount,
                d.levCount,
                d.status,
                p.name AS pname
            FROM
                t_discount d
            LEFT JOIN t_product p ON d.proid = p.id
            WHERE
                1 = 1
            AND d.protype = 0
            AND d.proid != 0
            UNION
                SELECT
                    d.id,
                    d.name,
                    d.begintime,
                    d.endtime,
                    d.cuttype,
                    d.cutnum,
                    d.convertType,
                    d.convertNum,
                    d.facevale,
        d.allCount,
                d.levCount,
                d.status,
                     c.name AS pname
                FROM
                    t_discount d
                LEFT JOIN t_catalog c ON d.proid = c.id
                WHERE
                    1 = 1
                AND d.protype = 1
                AND d.proid != 0
                AND c.type = 'p'
                ORDER BY
                    endtime DESC
                    limit #{offset},#{pageSize}
        </select>


